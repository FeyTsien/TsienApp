<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">


        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll">

            <!--可折叠区域-->
            <include layout="@layout/wokebench_collapsing_c" />

        </android.support.design.widget.CollapsingToolbarLayout>

        <!--悬浮的部分-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25"
            android:layout_marginBottom="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_13">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="任务中心"
                android:textColor="@color/colorTextTitle"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:id="@+id/tv_create_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toLeftOf="@+id/tv_task_set"
                android:text="@string/create_task"
                android:textColor="@color/colorTextButton"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_task_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="@string/setting"
                android:textColor="@color/colorTextButton"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/tl_task_center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_64" />

    </android.support.design.widget.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <com.tsienlibrary.widget.CustomViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.core.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>